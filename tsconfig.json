{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["scripts/**/*.ts", "ops/**/*.json"]
}
